<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="currentUserInfoController" class="com.learn.qq.controller.impl.CurrentUserInfoController">
        <property name="currentUserInfoService" ref="currentUserInfoService" />
    </bean>

    <bean id="friendListController" class="com.learn.qq.controller.impl.FriendListController">
        <property name="friendListService" ref="friendListService" />
    </bean>

    <bean id="workToolController" class="com.learn.qq.controller.impl.WorkToolController">
        <property name="workToolService" ref="workToolService" />
    </bean>
</beans>